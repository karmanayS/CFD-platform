generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model OpenOrders {
  id       Int      @id @default(autoincrement())
  userId   String
  orderId  String
  asset    String
  type     String
  qty      Float
  leverage Int
  amount   Float
  margin   Float

  timestamp DateTime
  snapshot  Snapshots  @relation(fields: [timestamp],references: [at],onDelete: Cascade)
}

model Balances {
  id      Int    @id @default(autoincrement())
  userId  String @unique
  amount  Float
  margin  Float
  locked  Float

  timestamp DateTime
  snapshot  Snapshots  @relation(fields: [timestamp],references: [at],onDelete: Cascade)
}

model Snapshots {
  id           Int                  @id @default(autoincrement())
  at           DateTime     @unique @default(now())

  openOrders   OpenOrders[]
  balances     Balances[]
}
